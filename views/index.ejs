<!DOCTYPE html>
<html lang="en">
	<% include ./partials/head %>
	<body>
		<% include ./partials/nav %>
		<div class="card-deck">
			<% if (posts.length > 0) { %> <% posts.forEach(data => { %>
			<div class="deck-tile">
				<div class="card-body">
					<h5 class="card-title"><%= data.title %></h5>
					<p class="date">
						<% let date = data.createdAt.toString().substring(0, 15)%> <%= date
						%>
					</p>
					<p class="card-text">
						<br />
						<%= data.post %>
					</p>
					<button class="comment-length">
						<%= data.commentHistory.length %>
					</button>
					<br />
					<p class="author">Author: <%= data.owner.username %></p>
				</div>
			</div>
			<% }) %> <% }else { %>
			<p>There's no posts yet!</p>
			<% } %>
		</div>
		<% include ./partials/script %>
	</body>
</html>
